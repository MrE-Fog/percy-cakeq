{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "parserOptions": {
        "project": [
          "./tsconfig.json",
          "./tsconfig.spec.json"
        ]
      },
      "rules": {
          "no-constant-condition": "off",
          "brace-style": [
            "error",
            "1tbs"
          ],
          "@typescript-eslint/quotes": [
            "error",
            "double",
            {
              "allowTemplateLiterals": true
            }
          ],
          "@typescript-eslint/consistent-type-definitions": "error"
        }
    }
  ]
}
